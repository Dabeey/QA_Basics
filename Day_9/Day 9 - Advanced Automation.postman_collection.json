					"script": {
						"exec": [
							"pm.test(\"Response status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Fixing the syntax error for setting a header\r",
							"pm.request.headers.add({key: 'Content-Type', value: 'application/json'});\r",
							"\r",
							"pm.test(\"Response contains valid data\", function () {\r",
							"    pm.expect(pm.response.json()).to.have.property('data');\r",
							"});\r",
							"\r",
							"pm.test(\"Response contains support information\", function () {\r",
							"    pm.expect(pm.response.json()).to.have.property('support');\r",
							"});\r",
							""
